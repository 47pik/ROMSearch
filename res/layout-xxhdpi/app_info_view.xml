<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorial_layout"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit_heading"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        />
    
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit1"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit2"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        />
		
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit3"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        />
	
		<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit4"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit5"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit6"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        />
    
</LinearLayout>